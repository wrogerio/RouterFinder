@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-2 justify-content-center">
    <div class="col-10 pt-2">
        <div class="alert alert-primary shadow">
            <div class="card shadow">
                <div class="card-header">
                    <h2>
                        <i class="fas fa-plane me-1"></i>
                        Choose your destiny
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col">
                            <div class="form-control">
                                <label>From</label>
                                <select class="form-control" asp-items="(SelectList)ViewBag.StartPoints" id="selectFrom">
                                    <option>Select one</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-control">
                                <label>To</label>
                                <select class="form-control" id="selectTo">
                                    <option>Select one</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span id="btnFind" class="btn btn-primary">
                                <i class="fas fa-globe-americas me-2"></i>
                                Find best route
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-footer ">
                    <div class="d-flex justify-content-between">
                        <h4>
                            <i class="fas fa-thumbs-up me-1"></i>
                            The best route for you...
                        </h4>
                        <h4>
                            <i class="fas fa-badge-dollar me-1"></i>
                            <span id="spanCost"></span>
                        </h4>
                    </div>
                    <div>
                        <ul class="list-group" id="listRoutes">
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script src="~/js/home.js"></script>
}